<%= render "create_task_btn"%>
<% x.each do |task| %>

  <% if @found_task.id == task.id %>
    <%= render "expand_task", x: @found_task %>
  <% else %>

    <div class="card">
      <a href="../tasks/<%= task.id %>">
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>

        <%= task.title %>
      </a>

      <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="tasks/<%= task.id %>">
        <i class="fas fa-times"></i>
      </a>
    </div>


  <% end %>

<% end %>
