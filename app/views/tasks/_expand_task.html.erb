<a href="../tasks">
  <div class="card">

    <div class="completed">
      <% if x.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
    </div>

    <div><%= x.title %></div>

    <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="tasks/<%= x.id %>">
      <i class="fas fa-times"></i>
    </a>

    <div class="details">
      <%= x.details %>
    </div>


  </div>
</a>
